<%- include('../includes/head.ejs') %>
    <style>
        ul {
            list-style: none;
        }

        .orders {
            margin: 0;
            padding: 0;
        }

        .orders li {
            border: 1px solid #ccc;
            margin: 10px 0;
            padding: 10px;
        }

        h1 {
            font-size: 1.5em;
            margin: 0;
        }

        .orders ul li {
            font-size: 1.2em;
            margin: 5px 0;
        }
    </style>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if (orders.length <=0) { %>
                    <h1>Nothing there!</h1>
                    <% } else { %>
                        <ul class="orders">
                            <% orders.forEach(order=> { %>
                                <li>
                                    <h1># <%= order._id %>
                                    </h1>
                                    <ul>
                                        <% order.products.forEach(product=> { %>
                                            <li>
                                                <%= product.product.title %> (<%= product.quantity %>)
                                            </li>
                                            <% }); %>
                                                <p>Total : $<%= order.products.reduce((acc,product)=>{
                                                        return acc + (product.product.price * product.quantity)
                                                        }, 0 ) %> <a href="/invoice/<%= order._id %>">Invoice</a> </p>
                                    </ul>
                                </li>
                                <% }); %>
                        </ul>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>